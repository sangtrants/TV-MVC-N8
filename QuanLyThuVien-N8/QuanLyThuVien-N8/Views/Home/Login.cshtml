<!DOCTYPE html>
<html lang="en">

<head>
    @model QuanLyThuVien_N8.Models.LoginModel
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Đăng nhập</title>

    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/admin/css/bootstrap.min.css")" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="@Url.Content("~/Content/admin/css/plugins/metisMenu/metisMenu.min.css")" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/admin/css/sb-admin-2.css")" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="@Url.Content("~/Content/admin/font-awesome-4.1.0/css/font-awesome.min.css")" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                   
                    <div class="panel-heading">
                        <h3 class="panel-title">Vui lòng điền thông tin đăng nhập</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" action="/Home/LoginValid">
                            <fieldset>
                                <div class="form-group">
                                     @Html.LabelFor(m => m.UserName)
                                     @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                     @Html.ValidationMessageFor(m => m.UserName)
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password)
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Login" onclick="return check();">
                            </fieldset>
                        </form>
                    </div>
                     @if (Session["error"] != null)
                    {
                        <h3 style="color:red">Wrong UserName or PassWord</h3>
                        Session["error"] = null;
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery Version 1.11.0 -->
    <script src="~Content/admin/js/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~Content/admin/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~Content/admin/js/plugins/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~Content/admin/js/sb-admin-2.js"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script >
        function check() {
            var user = document.getElementById('UserName');
            var pass = document.getElementById('Password');
            if (user.value == "" || pass.value == "") {
                alert("Vui lòng nhập username và password");
                return false;
            }
            else
                return true;
        }
</script>
</body>

</html>
